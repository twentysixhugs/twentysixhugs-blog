{
  "compilerOptions": {
    "target": "es5",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "baseUrl": ".",
    "paths": {
      "@views": ["./src/views"],
      "@views/*": ["./src/views/*"],
      "@modules": ["./src/modules"],
      "@components": ["src/components"],
      "@containers": ["./src/containers"],
      "@shared": ["./src/shared"],
      "@context": ["src/appConfig/context"],
      "@api": ["src/api"],
      "@api/*": ["src/api/*"],
      "@app": ["src/appConfig"],
      "@utils": ["src/utils"],
      "src/*": ["./src/*"]
    },
    "plugins": [
      {
        "name": "next"
      }
    ]
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts",
    "**/*.js",
    "**/*.jsx"
  ],
  "exclude": ["node_modules"]
}
